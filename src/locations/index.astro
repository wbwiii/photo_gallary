<SiteLayout title="Locations — Will’s Photos">
  <h1 class="h1">Locations</h1>
  <p class="p">Browse galleries by state, country, or region.</p>

  <div class="list">
    {locations.map((l) => (
      <a class="card" href={`${import.meta.env.BASE_URL}locations/${l.country}/${l.region}/`}>
        <div class="card-body">
          <p class="card-title">{l.label}</p>
          <p class="card-meta">{l.count} photos</p>
        </div>
      </a>
    ))}
  </div>
</SiteLayout>
