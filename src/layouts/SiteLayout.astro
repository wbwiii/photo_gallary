---
import "../styles/global.css";
const { title = "Will’s Photos" } = Astro.props;

// Always ends with one trailing slash
const BASE = import.meta.env.BASE_URL.replace(/\/?$/, "/");
---


<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>

  <body>
    <header class="header">
      <div class="header-inner">
        <a class="brand" href={`${BASE}`}>Will’s Photos</a>
        <nav class="nav">
          <a href={`${BASE}locations/`}>Locations</a>
          <a href={`${BASE}timeline/`}>Timeline</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="footer">
      © {new Date().getFullYear()} Will Williams
    </footer>
  </body>
</html>

