---
import SiteLayout from "../layouts/SiteLayout.astro";
import PhotoCard from "../components/PhotoCard.astro";
import photos from "../data/photos.json";

const featured = photos.filter((p) => p.featured).slice(0, 9);
const hero = featured[0] ?? photos[0];
---

<SiteLayout title="Will’s Photos">
  <section class="hero">
    <img class="hero-img" src={hero.urls.web} alt={hero.title} />
    <div class="hero-overlay">
      <h1 class="hero-title">{hero.locationLabel}</h1>
      <p class="hero-sub">{hero.title} • {hero.date}</p>
    </div>
  </section>

  <h2 class="section-title">Featured</h2>
  <div class="grid">
    {featured.map((photo) => <PhotoCard photo={photo} />)}
  </div>
</SiteLayout>
