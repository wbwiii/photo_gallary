<SiteLayout title="Timeline — Will’s Photos">
  <h1 class="h1">Timeline</h1>
  <p class="p">A chronological walk through your shots.</p>

  <div class="list">
    {sorted.map((p) => (
      <div class="row">
        <img src={p.urls.thumb} alt={p.title} loading="lazy" />
        <div class="row-body">
          <div class="kicker">{p.date} • {p.locationLabel}</div>
          <div style="font-weight:900; font-size:18px; margin-top:6px;">
            <a style="text-decoration:none;" href={`${import.meta.env.BASE_URL}photo/${p.id}/`}>{p.title}</a>
          </div>
          <div style="color: var(--muted); margin-top:6px;">{p.description}</div>
        </div>
      </div>
    ))}
  </div>
</SiteLayout>
